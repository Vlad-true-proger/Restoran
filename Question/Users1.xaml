<Window x:Class="Question.Users1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Users1" Height="300" Width="300">
    <Grid RenderTransformOrigin="0.481,0.255" Margin="0,0,-8,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"></RowDefinition>
            <RowDefinition Height="23*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0">
            <Label>Login</Label>
            <TextBox Name="LoginTextBox"></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label>Password</Label>
            <TextBox Name="PasswordTextBox"></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <Label Visibility="Hidden" Name="ErrorL">ERROR!</Label>
            <Button Content="Log In" Click="Button_Click" />
        </StackPanel>
        <ListBox x:Name="UserList" Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0,10,0" Visibility="Hidden"/>
    </Grid>
</Window>
